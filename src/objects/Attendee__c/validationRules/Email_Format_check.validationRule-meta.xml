<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Email_Format_check</fullName>
    <active>true</active>
    <errorConditionFormula>REGEX( Email__c , &quot;[a-zA-Z0-9._]+@[a-zA-Z0-9.]&quot;)</errorConditionFormula>
    <errorDisplayField>Email__c</errorDisplayField>
    <errorMessage>Email format is not valid</errorMessage>
</ValidationRule>
